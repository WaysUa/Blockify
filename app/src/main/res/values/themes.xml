<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Blockify" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/dark</item>
        <item name="android:statusBarColor">@color/dark</item>
        <item name="android:navigationBarColor">@color/dark</item>
    </style>

    <style name="Theme.BlockifySplashScreen" parent="Theme.Blockify">
        <item name="windowSplashScreenBackground">@color/dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_icon_with_background</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Blockify</item>
    </style>
</resources>